@using Sandbox;
@using Sandbox.UI;
@using System;
@namespace Reprint
@inherits FactoryPanel

<root>
	<FactoryStepPanel Fact=@(this)>
		<Name>Horizontal Line</Name>
		<Config>
			<FactoryStrokeSelection @ShowConfigurator=@(workspace.currentScene.useConfigurator)
				@ShowDodgeBurn=@(workspace.currentScene.useDodgeBurn) @StrokeStep=@Fact></FactoryStrokeSelection>
		</Config>
	</FactoryStepPanel>
</root>

@code
{
	private FactoryLine Fact { get => factory as FactoryLine; }
	protected override FactoryStep CreateFactory() => new FactoryLine();
}
